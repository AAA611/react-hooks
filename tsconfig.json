{
    "compilerOptions": {
        "outDir": "./packages/hooks/dist",
        "target": "ES5",
        "module": "ESNext",
        "moduleResolution": "node",
        "jsx": "react",
        "esModuleInterop": true,
        "downlevelIteration": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "declaration": false,
        "strictNullChecks": true,
        "importHelpers": true
    },
    "exclude": [
        "node_modules",
        "lib",
        "es",
        "dist",
        "example"
    ]
}